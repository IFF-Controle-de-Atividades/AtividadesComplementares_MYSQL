<FIELDSET>
    <LEGEND><H1><label><%= t('.Edit') %></label></H1></LEGEND>
<DIV id="localization">

<%= form_for(@avaliador, :url=>{:action=>'reload'}, :html => { :multipart => true }) do |l| %>
     <% if @avaliador.errors.any? %>
        <div id="error_explanation">
          <%= t 'general.form_error' %>
        </div>
    <% end %>

    <div class="field">
       <b><%= l.label t('.changeImage') %></b>
       <i id="blue" class="small"><%= t('.readmecarefully') %></i>
       <br>
       <%= l.file_field :image %><BR /></b>
       <%= error_tag @avaliador, :image %>
    </div>
  
    <br>
    <br></FIELDSET>
    <div class="botao_left">
        <span class="luz"><%= l.submit t('.send'), :class=>"botao", :id=>'id_botao' %></span>
    </div>
    
    <div class="botao_left">
      <%= link_to t('links.back'), avaliadores_index_path, :class=>"botao", :id=>'id_botao' %>
    </div>
<%- end -%>


