<% @user = current_avaliador.nome %>

<strong>
  <p>
    <font size="9" color="red"></font>
    <label>
      &nbsp <%= t('form_messages.requiredfields')%>
    </label>
  </p>
</strong>

<FIELDSET>
    <LEGEND>
    <h2><%= label_tag I18n.t('avaliadores.edit.profile', :name=> @user) %></h2>
    </LEGEND>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <%= t 'general.form_error' %>
    </div>
  <% end %>

  <div class="session">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
    <%= error_tag @avaliador, :nome %>
  </div>
  <div class="session">
    <%= f.label :matricula %><br />
    <%= f.text_field :matricula %>
    <%= error_tag @avaliador, :matricula %>
  </div><br />
  <div class="session">
    <%= f.label :titulacao %><br />
     <%= f.text_field :titulacao %>
    <%= error_tag @avaliador, :titulacao %>
  </div>
  
  <div class="field">
    <%= f.label :sexo %>
    <DIV class="radio_component">
      <%= f.radio_button :sexo, t('labels._masc') %>
      <label id="ident">&nbsp<%= t('labels._masc') %></label>
      <%= f.radio_button :sexo, t('labels._feme') %>
      <label id="ident">&nbsp<%= t('labels._feme') %></label>
      <%= error_tag @avaliador, :sexo %>
    </DIV>
  </div>

  <div class="field">
    <%= f.label :admin %><br />
    <DIV class="radio_component">
      <%= f.radio_button :admin, 1 %><label id="ident">&nbsp<%= t('labels._yes')%></label>
      <%= f.radio_button :admin, 0 %><label id="ident">&nbsp<%= t('labels._no')%></label>
    </DIV>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <DIV class="radio_component">
      <%= f.radio_button :status, 1 %><label id="ident">&nbsp<%= t('labels._on')%></label>
      <%= f.radio_button :status, 0 %><label id="ident">&nbsp<%= t('labels._off')%></label>
    </DIV>
  </div>

  <div class="session">
      <%= f.label :email %>
      <%= f.email_field :email, :placeholder => "example@example.com" %>
      <%= error_tag(@avaliador, :email)%>
  </div>

  <div class="session">
      <%= f.label :password %>
      <i id="blue" class="small"><%= t('form_messages.password_message') %></i><BR />
      <%= f.password_field :password, :placeholder => t('form_messages.password') %>
      <%= error_tag(@avaliador, :password)%>
  </div>

  <div class="session">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :placeholder => t('form_messages.password') %>
      <%= error_tag(@avaliador, :password_confirmation)%>
  </div><BR />

  <div class="session">
      <%= f.label :current_password %>
      <!-- <i id="blue" class="small"><%= t('form_messages.current_password') %></i><br />  -->
      <%= f.password_field :current_password %>
      <%= error_tag(@avaliador, :current_password)%>
  </div>



</FIELDSET>  
<div class="botao_left">
  <span class="luz">
    <%= f.submit t('links.send'), :class=>"botao", :id=>'id_botao' %>
  </span>
</div>
<div class="botao_left">
    <%= link_to t('links.back'), avaliadores_index_path, :class=>"botao", :id=>'id_botao' %>
</div>
<% end %>