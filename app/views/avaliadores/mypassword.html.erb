<FIELDSET>
    <LEGEND><H1><STRONG><label><%= t('avaliadores.mypassword.edit') %></label></H1></LEGEND></STRONG>
<DIV id="localization">

<%= form_for(@avaliador, :url=>{:action=>'updatepassword'}) do |f| %>
     <% if @avaliador.errors.any? %>
        <div id="error_explanation">
          <%= t 'general.form_error' %>
        </div>
    <% end %>

    <div class="control-group">
        <%= f.label :password %>
        <i id="blue"><%= t('avaliadores.profileimage.readmecarefully') %></i><BR />
        <%= f.password_field :password %>
        <%= error_tag @avaliador, :password %>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <%= error_tag @avaliador, :password_confirmation %>
    </div>

    <div class="control-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password %>
      <%= error_tag @avaliador, :current_password %>
    </div>
  
    <br>
    <br></FIELDSET>
    <div class="botao_left">
      <%= f.submit t('avaliadores.profileimage.send'), :class=>"btn btn-success btn-large", :id=>'id_botao' %>
    </div>
    
    <div class="botao_left">
      <%= link_to t('links.back'), avaliadores_index_path, :class=>"btn btn-success btn-large", :id=>'id_botao' %>
    </div>
<%- end -%>


