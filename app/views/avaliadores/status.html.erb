<BR />

<% if @avaliador.errors.any? %>
  <div id="error_explanation">
    <%= t 'generaf.form_error' %>
  </div>
<% end %>
<FIELDSET>
<LEGEND><h1><strong><%= label_tag(t('.title')) %></strong></h1></LEGEND>

<%= form_for(@avaliador, :url=>{:action=>'update_status'}) do |f| %>
  <div class="control-group">
    <%= f.label :nome %>
    <%= f.text_field :nome,:readonly=>:false %>
    <%= error_tag @avaliador, :nome %>
  </div>
  
  <div class="control-group">
    <%= f.label :matricula %>
    <%= f.text_field :matricula,:readonly=>:false %>
    <%= error_tag @avaliador, :matricula %>
  </div>
  
  <div class="control-group">
    <%= f.label :titulacao %>
     <%= f.text_field :titulacao,:readonly=>:false %>
    <%= error_tag @avaliador, :titulacao %>
  </div>

  <div class="control-group">
      <%= f.label :status %>
      <div class="controls">
        <DIV class="radio_component">
          <label class="radio">
            <%= f.radio_button :status, 1 %><%= label_tag t('labels._on') %>
          </label>

          <label class="radio">
            <%= f.radio_button :status, 0 %><%= label_tag t('labels._off') %>
          </label>
          <%= error_tag @avaliador, :status %>
        </DIV>
      </div>
  </div>

  <div class="control-group">
      <%= f.label :admin %>
      <div class="controls">
        <DIV class="radio_component">
          <label class="radio">
            <%= f.radio_button :admin, 1 %><%= label_tag t('labels._on') %>
          </label>

          <label class="radio">
            <%= f.radio_button :admin, 0 %><%= label_tag t('labels._off') %>
          </label>
          <%= error_tag @avaliador, :admin %>
        </DIV>
      </div>
  </div>
  <br /></FIELDSET>
  <BR /><BR /><BR />
  <div class="botao_left">
      <%= f.submit t('links.send'), :class=>"btn btn-success btn-large", :id=>'id_botao' %>
  </div>
  <div class="botao_left">
    <%= link_to t('links.back'), total_avaliadores_path, :class=>"btn btn-success btn-large", :id=>'id_botao' %>
  </div>
<% end %>