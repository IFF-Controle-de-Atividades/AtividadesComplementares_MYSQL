<FIELDSET>
    <LEGEND><H1><label><%= t('alunoes.mypassword.edit') %></label></H1></LEGEND>
<DIV id="localization">

<%= form_for(@aluno, :url=>{:action=>'changepassword'}, :html => { :method => :put }) do |f| %>
     <% if @aluno.errors.any? %>
        <div id="error_explanation">
          <%= t 'general.form_error' %>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :password %><br />
        <i id="blue" class="small"><%= t('alunos.changepassword.edit') %></i><BR />
        <%= f.password_field :password %>
        <%= error_tag @aluno, :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
      <%= error_tag @aluno, :password_confirmation %>
    </div>

    <div class="field">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password %>
      <%= error_tag @aluno, :current_password %>
    </div>
  
    <br>
    <br></FIELDSET>
    <div class="botao_left">
        <span class="luz"><%= f.submit t('alunos.profileimage.send'), :class=>"botao", :id=>'id_botao' %></span>
    </div>
    
    <div class="botao_left">
      <%= link_to t('links.back'), aluno_index_path, :class=>"botao", :id=>'id_botao' %>
    </div>
<%- end -%>