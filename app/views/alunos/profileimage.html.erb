    <LEGEND><H1><strong><label><%= t('.Edit') %></label></H1></LEGEND></strong>
<DIV id="localization">

<% if @aluno.errors.any? %>
  <div id="error_explanation">
    <%= t 'general.form_error' %>
  </div>
<% end %>

<%= form_for(@aluno, :url=>{:action=>'reloadimageprofile'}, :html => { :multipart => true }) do |l| %>
     

    <div class="control-group">
       <b><%= l.label t('.changeImage') %></b>
       <i id="blue"><%= t('.readmecarefully') %></i>
       <br>
       <%= l.file_field :image %><BR /></b>
       <%= error_tag @aluno, :image %>
    </div>
  
    <br>
    <br></FIELDSET>
    <div class="botao_left">
        <%= l.submit t('links.send'), :class=>"btn btn-success btn-large", :id=>'id_botao' %>
    </div>
    
    <div class="botao_left">
        <%= link_to t('links.back'), aluno_index_path, :class=>"btn btn-success btn-large", :id=>'id_botao' %>
    </div>
<%- end -%>


