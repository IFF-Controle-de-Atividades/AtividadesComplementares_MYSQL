<div class="flickr_pagination pagination">
	<div class="page_info" id="homealuno">
		<%= will_paginate atividades, :previous_label => "&laquo; Anterior", 
            :next_label => "PrÃ³xima &raquo;", :container => false%>
	</div>
</div>

<div><table id="home" summary="Atividades"><caption>Atividades</caption>
	<thead >
            <tr>
                <th>Nome</th>
		<th>CH</th>
		<th>Anexar Comprovante</th>
		<th>Ver Comprovante</th>
		<th>Excluir</th>
            </tr>
	</thead>
	<tbody id="home">
		<% for atividade in atividades %>
		<tr id="home">
      <td id="td1"><center><%= atividade.title %></center></td>
      <% if atividade.horas_aceitas.nil? %>
          <td id="td1"><center><%= t('alunos.atividades.notEvaluated')%></center></td>
      <% else %>
          <td id="td1"><center><%= atividade.horas_aceitas %></center></td>
      <% end %>
      <td cellspacing=2>
          <center>
              <%= link_to t('links.edit'), edit_atividade_path(atividade) %>
          </center>
      </td>
      <% if atividade.comprovante.path.nil? %>
          <TD id="td1"><%= t('alunos.atividades.comprovante')%></TD>
      <% else %>
          <td id="td1"><center>
              <%= link_to "#{image_tag("fallback/pdf-icon.png",:width=>"60",:height=>"50",:alt=>"Anexar Comprovante")}".html_safe, "atividade.comprovante"%>
              </center>
          </td>
      <% end %>
      <td id="td1">
          <%= link_to t('links.destroyActivitie'), excluir_atividade_path(atividade), 
          :method => :delete, :confirm => 'Tem Certeza?'  %>
      </td>
		</tr>
		<%- end -%>
	</tbody>
    </table>
</div>