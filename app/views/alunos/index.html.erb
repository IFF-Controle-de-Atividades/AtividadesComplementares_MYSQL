<div id="aluno_logado" class="button">
<fieldset>
    <legend >Logado</legend>
      <div id="facemenu">
        <ul> 
          <li>
            <div class="retrato">
              <center>
                <%= image_tag current_aluno.image %>
              </center>
            </div>
            <ul> 
              <li>
                <%= link_to "Atualizar imagem", profile_image_path %>
              </li>
              <li>
                <%= link_to "Alterar senha", password_path(current_aluno.id) %>
              </li>
              <li>
                <%= link_to "Remover imagem", default_image_path %>
              </li>
            </ul> 
          </li>
        </ul>
      </div>
      <p id="loged_in">
        <%= label_tag :nome%>  <%= current_aluno.nome %><br />
        <%= label_tag :curso%> <%= current_aluno.curso %><br />
        <%= label_tag :matricula%> <%= current_aluno.matricula %>
      </p>
    <%= link_to "Sair", aluno_session_out_path, :method => :delete, :class =>"button" %>
</fieldset>
</div>
<div id="HomeAtividadesPage">
  <div  height='150px'>
    <% if current_aluno.atividades.empty? %>
      <div class="red_infobar">
        <div>Você não possui atividades.</div>
      </div>
    <% else %>
      <div id="listaAtividadesHome">
        <%= render :partial=>'home_atividades', :locals=>{:atividades=>current_aluno.atividades.paginate(:page => params[:page], :per_page=>2)}  %>
      </div>
    <% end %>           
  </div>
</div>
